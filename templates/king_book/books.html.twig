{# Affichage de la page Ouvrage #}

{% extends "base.html.twig" %}

{% block body %}

    <h1>Ouvrages</h1>

    <p>Paragraphe</p>
    

    <select class="form-control" id="selCategory">
    {% for category in category %}
    <option value="{{category.category}}">{{category.category}}</option>
    {% endfor %}
    </select>
    
    {% for book in book %}
    {% if (selCategory==book.category) %}
    <div class="text">{{book.title}}</div>
    {% endif %}
    {% endfor %}
<script type="text/javascript">
    var selCategory = document.getElementById("selCategory");
    </script>
{% endblock %}